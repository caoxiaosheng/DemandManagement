<view class="page">
  <view class="page__bd">
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">用户名</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" name="userName" value='{{clearValue}}'/>
          </view>
        </view>
      </view>
      <view class="weui-cells__title">密码</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" name="password" value='{{clearValue}}'/>
          </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button class="weui-btn" formType="submit" type="primary">绑定</button>
      </view>
    </form>
  </view>
</view>